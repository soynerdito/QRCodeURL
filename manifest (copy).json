 
{
  "name": "QR URL",
  "version": "2.0",
  "description": "Show current web URL as a QRCode so you may scan with your mobile device.",
  "browser_action": {
    "default_icon": "icon.png",
    "popup": "popup.html"
  },
  "permissions": [
    "http://chart.apis.google.com/",
    "tabs","contextMenus"
  ],
  "background": {
    "default_icon": "icon.png",
    "persistent": false,
    "scripts": ["main.js"]
  },
  "manifest_version": 2
}

